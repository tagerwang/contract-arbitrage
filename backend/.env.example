# 数据库配置（MySQL 8）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=arbitrage_db
DB_USER=root
DB_PASSWORD=your_password

# API服务器配置
PORT=3001
NODE_ENV=development

# 交易所API配置（可选）
BINANCE_API_KEY=
BINANCE_API_SECRET=
# 双向持仓模式设为 true，则 positionSide 自动为 LONG(买)/SHORT(卖)
BINANCE_DUAL_POSITION=false

OKX_API_KEY=
OKX_API_SECRET=
# 若密码含 $ 请加引号: OKX_PASSPHRASE='$xxx'
OKX_PASSPHRASE=

BYBIT_API_KEY=
BYBIT_API_SECRET=

# 监控配置
CHECK_INTERVAL_MS=5000
MIN_PROFIT_THRESHOLD=0.3
# 交易所 API 请求间隔（毫秒），避免频率过高
EXCHANGE_REQUEST_DELAY_MS=200
# 全量资金费率缓存时间（毫秒），默认 5 分钟
FUNDING_RATES_CACHE_TTL_MS=300000
